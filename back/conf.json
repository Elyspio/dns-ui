
;
; BIND data file for local loopback interface
;
$TTL    60
@       IN      SOA     local.elyspio.fr. elyspio.local. (
                              2         ; Serial
                         604800         ; Refresh
                          86400         ; Retry
                        2419200         ; Expire
                         604800 )       ; Negative Cache TTL
;
@       IN      NS      local.elyspio.fr.
@       IN      NS      elyspio.local.
@       IN      A       127.0.0.1

;your sites
test IN A 192.168.0.1
test2 IN A 192.168.0.4
freebox IN A 192.168.0.6
